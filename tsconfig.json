{
    "compilerOptions": {
        "jsx": "react",
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "esModuleInterop": true
    },
    "exclude": ["webpack.config.js", "node_modules", "build"],
    "include": ["src/**/**/**/**/*", "src/types/index.d.ts"]
}
